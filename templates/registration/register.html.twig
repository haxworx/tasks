{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_errors(form) }}

    {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(form.confirmPassword, {
            label: 'Confirm'
        }) }}
        {{ form_row(form.agreeTerms) }}

        <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(form) }}
{% endblock %}
